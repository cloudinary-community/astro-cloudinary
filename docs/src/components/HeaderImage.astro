---
import { cn } from '../lib/util';

interface Props {
  class?: string;
  layout?: string;
};

const { layout, class: className }: Props = Astro.props;
---
<div class={cn(
    'w-full bg-slate-100 border border-slate-200 dark:bg-black dark:border-[#1c2428] p-2 sm:py-8 rounded my-5',
    className
  )}>
  <div
    class="
      header-image-children flex justify-center max-w-[500px] mx-auto my-0
      data-[layout=grid]:grid data-[layout=grid]:max-w-full data-[layout=grid]:grid-cols-[1fr_1fr] data-[layout=grid]:gap-2
      [&_img]:rounded-sm [&_img]:!m-0
    "
    data-layout={layout}
  >
    <slot />
  </div>
</div>